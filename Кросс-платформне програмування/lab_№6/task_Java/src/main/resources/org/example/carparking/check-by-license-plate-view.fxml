<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="300.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.carparking.controller.CheckByLicensePlateController">
    <children>
        <HBox alignment="CENTER" layoutX="50.0" layoutY="14.0" prefHeight="59.0" prefWidth="454.0" spacing="15.0">
            <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="License Plate" />
                <TextField fx:id="licensePlateInput" />
                <Button cancelButton="true" mnemonicParsing="false" text="Check" visible="false" />
            </children>
        </HBox>
        <ListView fx:id="licensePlateList" layoutX="50.0" layoutY="115.0" prefHeight="170.0" prefWidth="450.0" />
      <HBox alignment="CENTER" layoutX="50.0" layoutY="73.0" prefHeight="26.0" prefWidth="454.0" spacing="15.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Current Hour" />
            <TextField fx:id="currentHourInput" />
            <Button mnemonicParsing="false" onAction="#onCheckButtonPress" text="Check" />
         </children>
      </HBox>
    </children>
</AnchorPane>
